# ═══════════════════════════════════════════════════════════════════
# Application
# ═══════════════════════════════════════════════════════════════════
PORT={{port}}
NODE_ENV=development

{{#if persistence}}
# ═══════════════════════════════════════════════════════════════════
# Database
# ═══════════════════════════════════════════════════════════════════
{{#if sqlite}}
DB_DIALECT=sqlite
DB_STORAGE=./database.sqlite
{{else}}
DB_HOST=localhost
DB_PORT={{#if postgres}}5432{{else}}3306{{/if}}
DB_USER={{#if postgres}}postgres{{else}}root{{/if}}
DB_NAME={{projectName}}
DB_PASSWORD=
{{/if}}
{{/if}}

{{#if authEnabled}}
# ═══════════════════════════════════════════════════════════════════
# Authentication
# ═══════════════════════════════════════════════════════════════════
JWT_SECRET=your-super-secret-key-change-this-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-this
{{/if}}

{{#if storageEnabled}}
# ═══════════════════════════════════════════════════════════════════
# Storage
# ═══════════════════════════════════════════════════════════════════
STORAGE_LOCAL_URL=http://localhost:{{port}}/uploads
{{/if}}

{{#if mailEnabled}}
# ═══════════════════════════════════════════════════════════════════
# Mail
# ═══════════════════════════════════════════════════════════════════
MAIL_FROM_NAME={{projectName}}
MAIL_FROM_EMAIL=noreply@{{projectName}}.dev

# SMTP
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# API-based (SendGrid, Resend, Brevo) - use if configured in base
SENDGRID_API_KEY=
RESEND_API_KEY=
BREVO_API_KEY=
{{/if}}
